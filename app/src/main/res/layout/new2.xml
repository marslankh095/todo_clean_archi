<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00C853"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blinkit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/r3"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/r3"
            app:tint="#9E9E9E" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search for groceries"
            android:textColor="#9E9E9E"
            android:paddingStart="8dp"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/r3"
        android:scaleType="centerCrop"
        android:background="#E0E0E0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Picks"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#212121"
        android:layout_marginTop="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="6dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/r3"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/r4"
                android:scaleType="centerCrop"
                android:background="#EEEEEE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fresh Apples"
                android:textColor="#212121"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="ADD"
                android:backgroundTint="#00C853"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="6dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/r3"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/back_"
                android:scaleType="centerCrop"
                android:background="#EEEEEE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bananas"
                android:textColor="#212121"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="ADD"
                android:backgroundTint="#00C853"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>
